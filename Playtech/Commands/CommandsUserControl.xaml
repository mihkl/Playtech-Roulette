<UserControl
    x:Class="Playtech.Commands.CommandsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Playtech.Commands"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:CommandsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#272727"
    mc:Ignorable="d">
    <Viewbox>
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Commands" />
            <Rectangle
                Height="1"
                Margin="0,0,0,15"
                HorizontalAlignment="Stretch"
                Fill="White" />
            <Button
                Width="200"
                Height="30"
                Margin="0,5,0,5"
                Padding="10,5"
                Background="DimGray"
                BorderThickness="0"
                Command="{Binding AddResultCommand}"
                Content="Add random result"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                Width="200"
                Height="30"
                Margin="0,5,0,5"
                Padding="10,5"
                Background="DimGray"
                BorderThickness="0"
                Command="{Binding ShowNotificationCommand}"
                Content="Show notification"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Viewbox>
</UserControl>