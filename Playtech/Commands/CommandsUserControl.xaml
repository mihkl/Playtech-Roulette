<UserControl x:Class="Playtech.Commands.CommandsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Playtech.Commands"
             d:DataContext="{d:DesignInstance Type=local:CommandsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#272727">
    <Viewbox>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
            <TextBlock Text="Commands"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
            <Rectangle Height="1"
                       Fill="White"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,15" />
            <Button Content="Add random result"
                    Command="{Binding AddResultCommand}"
                    Padding="10,5"
                    Margin="0,5,0,5"
                    Background="DimGray"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Height="30"
                    Width="200">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Show notification"
                    Command="{Binding ShowNotificationCommand}"
                    Padding="10,5"
                    Margin="0,5,0,5"
                    Background="DimGray"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Height="30"
                    Width="200">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Viewbox>
</UserControl>