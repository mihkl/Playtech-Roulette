<UserControl
    x:Class="Playtech.Results.ResultsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Playtech.Results"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ResultsViewModel}"
    d:DesignHeight="180"
    d:DesignWidth="600"
    Background="#272727"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="0,10,0,10"
            BorderBrush="White"
            BorderThickness="0,0,0,1">
            <Viewbox>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Last 10 results" />
            </Viewbox>
        </Border>


        <ItemsControl
            Grid.Row="1"
            Margin="10"
            ItemsSource="{Binding Results}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Viewbox
                            Grid.Row="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Stretch">
                            <local:MultiplierResult
                                HorizontalAlignment="Stretch"
                                BorderBrush="{Binding BorderBrush}"
                                ColorBrush="{Binding ColorBrush}"
                                Multiplier="{Binding Multiplier}" />
                        </Viewbox>
                        <Viewbox Grid.Row="1" Margin="10,10,0,10">
                            <local:SquareResult
                                BorderBrush="{Binding BorderBrush}"
                                ColorBrush="{Binding ColorBrush}"
                                Position="{Binding Position}" />
                        </Viewbox>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>