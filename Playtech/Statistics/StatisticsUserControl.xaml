<UserControl
    x:Class="Playtech.Statistics.StatisticsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Playtech.Statistics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:StatisticsViewModel}"
    d:DesignHeight="150"
    d:DesignWidth="400"
    Background="#272727"
    mc:Ignorable="d">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,-3,0,5"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Statistics" />

            <Rectangle
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Width="400"
                Height="1"
                Margin="0,0,0,10"
                Fill="White" />

            <Border
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,0,5,10"
                Background="#333333"
                BorderBrush="Gray"
                BorderThickness="0.5"
                CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect />
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        Padding="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Active Players" />
                    <TextBlock
                        Padding="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding Statistics.ActivePlayers, TargetNullValue='0'}" />
                </StackPanel>
            </Border>

            <Border
                Grid.Row="2"
                Grid.Column="1"
                Margin="10,0,5,10"
                Background="#333333"
                BorderBrush="Gray"
                BorderThickness="0.5"
                CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect />
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        Padding="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Biggest Multiplier" />
                    <TextBlock
                        Padding="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding Statistics.BiggestMultiplier, StringFormat=x{0}}" />
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>