<Window x:Class="Playtech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playtech"
        xmlns:results="clr-namespace:Playtech.Results"
        xmlns:commands="clr-namespace:Playtech.Commands"
        xmlns:notification="clr-namespace:Playtech.Notification"
        xmlns:statistics="clr-namespace:Playtech.Statistics"
        mc:Ignorable="d"
        Title="Roulette" Height="600" Width="800"
        Background="#222222"
        MinWidth="600" MinHeight="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#272727" Margin="10" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect>

                </DropShadowEffect>
            </Border.Effect>
            <results:ResultsUserControl />
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#272727" Margin="10,10,10,0" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
                <Border.Effect>
                    <DropShadowEffect>

                    </DropShadowEffect>
                </Border.Effect>
                <commands:CommandsUserControl/>
            </Border>

            <Border Grid.Column="1" Background="#272727" Margin="10,10,10,0" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
                <Border.Effect>
                    <DropShadowEffect>

                    </DropShadowEffect>
                </Border.Effect>
                <statistics:StatisticsUserControl/>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#272727" Margin="10,10,10,10" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect>

                </DropShadowEffect>
            </Border.Effect>
            <notification:NotificationUserControl HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</Window>